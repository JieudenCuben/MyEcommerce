<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myecommercesystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Context"
        android:allowBackup="true"
        android:icon="@drawable/icon_ecommerce"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_ecommerce"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyEcommerceSystem">
        <activity
            android:name=".activities.AcceptAppointmentActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ShowAppointmentsActivity"
            android:exported="true" />
        <activity
            android:name=".activities.UpdateUserInfoActivity"
            android:exported="true" />
        <activity android:name=".activities.BookAppointmentActivity" />
        <activity android:name=".activities.UpdateProductInfoActivity" />
        <activity android:name=".activities.AddProductActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.BusinessDashboard" />
        <activity android:name=".activities.ConsumerDashboard" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>